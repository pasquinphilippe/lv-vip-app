# Luc Vincent VIP App - Environment Variables
# Copy to .env and fill in values

# Shopify App Configuration
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SCOPES=read_products,write_products,read_customers,write_customers,read_orders,write_discounts

# App URL (your deployed URL or ngrok for dev)
SHOPIFY_APP_URL=https://your-app.example.com

# Database (Supabase PostgreSQL)
# Pooled connection (for app)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-1-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection (for migrations)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-1-us-east-1.pooler.supabase.com:5432/postgres"

# Node environment
NODE_ENV=production
PORT=3000
